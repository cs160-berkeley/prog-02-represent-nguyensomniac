<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/F4F8F9</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="bold">
        <item name="fontPath">fonts/mark_simonson_-_proxima_nova_bold-webfont.ttf</item>
    </style>
    <style name="heading">
        <item name="fontPath">fonts/Rajdhani-SemiBold.ttf</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">.05</item>
    </style>
    <style name="mainHeading" parent="heading">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <style name="heading2" parent="heading">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="heading3" parent="bold">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="heading4" parent="heading">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="whiteBackground">
        <item name="android:background">@color/white</item>
    </style>
    <style name="roundedWhiteBackground">
        <item name="android:background">@drawable/rounded_white_background</item>
    </style>
    <style name="cardBorders">
        <item name="android:background">@drawable/rounded_white_outline</item>
    </style>
    <style name="cardInsides">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>
    <style name="secondaryButton" parent="heading">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <style name="secondaryButtonOutline" parent="secondaryButton">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:background">@drawable/button_secondary_outline</item>
    </style>
</resources>
